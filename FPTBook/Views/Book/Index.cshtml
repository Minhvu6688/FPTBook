@model ICollection<FPTBook.Models.Book>

    <h1>
        Book View
    </h1>
    <table class="table table-hover ">
    <tr class="table-secondary">
        <th>Book Id</th>
        <th>Book Name</th>
        <th>Book Price</th>
        <th>Book Title</th>
         <th>Actions</th>
    </tr>
    @foreach (var book in Model)
   {
       <tr class="table-info">
           <th scope="row">@book.Id</th>
            <td ><a asp-area="" asp-controller="Book" asp-action="BookDetail" asp-route-id="@book.Id" class="card-link" > <p style="color:black;">@book.Name</p></a></td>
             <td>@book.Price VND</td>
              <td>@book.Title</td>
              <td><button type="button" class="btn btn-danger">Delete</button>
<button type="button" class="btn btn-success">Update</button></td>
       </tr>
   }
</table>    