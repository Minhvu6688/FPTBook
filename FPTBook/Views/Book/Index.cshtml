@model ICollection<FPTBook.Models.Book>

    <h1 style = "font-family : Fantasy">
        Book View
    </h1>
        <h2 class="text-center"><a asp-controller="Book" asp-action= "Add" type="button" class="btn btn-outline-info">Add Book</a></h2>
        
    <br />
    <table class="table table-hover ">
    <tr class="table-secondary">
        <th>Book Id</th>
        <th>Book Name</th>
        <th>Book Price</th>
        <th>Book Title</th>
         <th class="text-center">Actions</th>
    </tr>
    @foreach (var book in Model)
   {
       <tr class="table-info">
           <th scope="row">@book.Id</th>
            <td ><a asp-area="" asp-controller="Book" asp-action="BookDetail" asp-route-id="@book.Id" class="card-link" > <p style="color:black;">@book.Name</p></a></td>
             <td>@book.Price VND</td>
              <td>@book.Title</td>

              <td class="text-center">
                           <a asp-controller="Book" asp-action="Edit" asp-route-id="@book.Id">
                                <img src="https://th.bing.com/th/id/OIP.sC_KrynSg1RnXXm0NEmZawHaHa?w=174&h=180&c=7&r=0&o=5&dpr=2&pid=1.7" width="50" height="40" />
                           </a>
                           <a asp-controller="Book" asp-action="Delete" asp-route-id="@book.Id"
                           onclick="return confirm('Are you sure to delete this book ?')"
                           >
                                <img src="https://th.bing.com/th/id/OIP.biPca-1335_ZK48PpgxM4gHaHa?w=176&h=180&c=7&r=0&o=5&dpr=2&pid=1.7" width="50" height="40" />
                           </a>
                           
                   </td>
              

       </tr>
   }

</table>    